sub curvePoints {
  my ($A, $B) = @_;
  my ($na, $nb, $aa, $ab) = map(LookupValue($_), qw(\psncurvA \psncurvB \psangleA \psangleB));
  my $d = pointPointDist($A, $B);
  my $A1 = nodeExt($A, Dimension($d*$na*0.5), $aa);
  my $B1 = nodeExt($B, Dimension($d*$nb*0.5), $ab);
  ($A, $A1, $B1, $B); }

