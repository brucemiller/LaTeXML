package LaTeXML::Package::Pool;
use strict;
use LaTeXML::Package;

DefConstructor('\Line Pair',
  "<ltx:line points='#points' stroke-width='#thick'/>",
  properties => sub { picProperties(points => '0,0 ' . picScale($_[1])->ptValue()); });

DefConstructor('\Vector Pair',
  "<ltx:line points='#points' stroke-width='#thick' terminators='->' arrowlength='#arrowlength'/>",
  properties => sub { picProperties(points => '0,0 ' . picScale($_[1])->ptValue()); });

DefConstructor('\Curve Pair {Float}',
  "<ltx:bezier points='&ptValue(#pt)' stroke-width='#thick' />",
  properties => sub {
    picProperties(pt => PairList(Pair(Dimension(0), Dimension(0)), picScale($_[1]),
        Pair($_[1]->getX->multiply(0.5)->add($_[1]->getY->multiply($_[2]->valueOf / 10)),
          $_[1]->getY->multiply(0.5)->subtract($_[1]->getX->multiply($_[2]->valueOf / 10))))); });

1;
