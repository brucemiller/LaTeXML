    my $options  = $whatsit->getArg(1);
    my $packages = $whatsit->getArg(2);
    my @pkgs     = grep { $_ } grep { !/^\s*%/ } split(/,\s*/, ToString($packages));
    $options = [($options ? split(/,\s*/, (ToString($options))) : ())];
    map { RequirePackage($_, options => $options) } @pkgs;
