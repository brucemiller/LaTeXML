	       sub {
		 my($document,$spec,$contents,%props)=@_;
		 my $model=$document->getModel;
		 my $block = $document->openElement('ltx:inline-block',vattach=>'bottom', 
						    height=>$spec && $$spec{to}, 'pad-height'=>$spec && $$spec{spread});
