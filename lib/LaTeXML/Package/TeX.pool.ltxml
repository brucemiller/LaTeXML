#======================================================================
# This is a somewhat strange situation; There are commands and environments
# that do some interesting thing to their contents. This include things like
# center, flushleft, or rotate, or ...
# Naively one is tempted to create a containing block with appropriate type & attributes.
# However, since these things can be allowed in so many places by LaTeX, that
# one has a difficult time creating a sensible document model.
# The purpose of transformingBlock is to set the contents (possibly creating a
# consistent <p> around them, if called for), and returning the list of newly
# created nodes. These nodes can then have appropriate attributes added as needed
# for each specific case.

# Since this situation can occur in both LaTeX and AmSTeX type documents,
# we'll put it in the TeX pool so it can be reused.

# Tricky bit for creating nodes late in the game,
# 
sub addNewChildLate {
  my($document,$node,$tag)=@_;
  my ($nsuri,$localname) = (undef,$tag);
  ($nsuri,$localname)= $document->getModel->decodeQName($tag);
  # Note that (currently), any afterOpen/afterClose are NOT run on this node!!!
  my $newnode = 
    ($nsuri ? $node->addNewChild($nsuri,$localname)
     : $node->appendChild($document->getDocument->createElement($localname)));
  # Copy essentials to new node.
  if(my $font = $node->getAttribute('_font')){
    $newnode->setAttribute(_font=>$font); }
  if(my $box = $node->getAttribute('_box')){
    $newnode->setAttribute(_box=>$box); }
  $newnode; }

# HACKERY!!!  This seems to require too much knowledge about inline vs block and such.
# Perhaps this really should be done as a daemon that runs when the current node is closed?
# Or perhaps even better, it should temporarily modify the Model such that the current node
# only accepts block level markup; that would automagically elevate stuff to <p> when needed!(?)
our $INLINE_TAGS = "ltx:text|ltx:emph|ltx:acronym|ltx:rule|ltx:anchor|ltx:ref|ltx:cite|ltx:bibref|ltx:Math|ltx:graphics";
sub insertBlock {
  my($document,$body)=@_;
  # Make sure we're starting the current insertion at block level, bu closing any open p (is ltx:p enough?)
  $document->maybeCloseElement('ltx:p');

  my $prev = $document->getNode->lastChild; # and remember the last node before insertion.
  $document->absorb($body);	    # Now insert.
  $document->maybeCloseElement('ltx:p');

  my $current = $document->getNode; # Watch that Current node makes sense after surgery.
  my $model   = $document->getModel;
  my $parent  = $document->getElement;
  return () unless $parent;
  # These nodes were inserted
  my @nodes = $parent->childNodes;
  # but remove any that precede $prev
  if($prev && grep($$prev == $$_, @nodes)){ # IF $prev is sibling of added nodes
    while( ${$nodes[0]} != $$prev){ shift(@nodes); } # then strip away $prev, and preceding, from list
    shift(@nodes); }

  # Wrap any "inline" nodes in a ltx:p, but delete any pure whitespace text nodes
  my @new = ();
  if ($model->canContain($parent,'ltx:p')) {
    while (@nodes) {
      my @x=();		 # Collect up the next group of "inline" nodes
      my $moved_current = 0; # whether we have affected the document's current node.
      while (@nodes && (($nodes[0]->nodeType == XML_TEXT_NODE)
			|| (($nodes[0]->nodeType == XML_ELEMENT_NODE) && ($model->getNodeQName($nodes[0]) =~ /^($INLINE_TAGS)$/)))) {
	$moved_current = 1 if ${$nodes[0]} == $$current;
	push(@x,shift(@nodes));
      }

      if (@x && !grep(($_->nodeType != XML_TEXT_NODE) || ($_->textContent =~ /\S/), @x)) { # Only whitespace text nodes?
	map($parent->removeChild($_),@x); # just remove them
	$document->setNode( (@new ? $new[-1] : $parent) ) if $moved_current;
      }		   # Watch out if we've deleted the current node!
      elsif (@x) { # Some worthwhile inline nodes to wrap in a <ltx:p>
	my $para = addNewChildLate($document,$parent,'ltx:p');
	$parent->removeChild($para);
	$parent->replaceChild($para,$x[0]); # replace 1st child by the <ltx:p>
	$document->setNode($para) if $moved_current; # This new <ltx:p> will be current if we've wrapped current.
	foreach my $c (@x) {
	  if ($c->nodeType == XML_TEXT_NODE) {
	    my $t = $c->textContent;
	    $para->appendTextNode($t) if $t =~ /\S/;
	  }			# append if more than just whitespace.
	  else {
	    $para->appendChild($c);
	  }
	  $parent->removeChild($c);
	}
	push(@new,$para);
      } elsif ($nodes[0]->nodeType == XML_ELEMENT_NODE) { # other element (block or similar), just move to new list
	if ($model->getNodeQName($nodes[0]) eq 'ltx:break') { # except for <break>!
	  $parent->removeChild(shift(@nodes));
	  $document->setNode($new[-1]) if $moved_current;
	}		# Watch out if we've deleted the current node!
	else {
	  push(@new,shift(@nodes));
	}
      } else {
	shift(@nodes);
      }
    }
  }

  @new = ($parent) unless @new;	#  ???

  # NOW, what we probably REALLY should do is return the parent of these
  # IFF there are no further insertions into that node... ????
  @new; }

sub aligningEnvironment {
  my($align,$class,$document,%props)=@_;
  map(setAlignOrClass($document,$_,$align,$class), insertBlock($document,$props{body}));	  # Add class attribute to new nodes.
}

sub addClass {
  my($node,$class)=@_;
  if($node && $class){
    if($node->hasAttribute('class')){
      $node->setAttribute(class=>$node->getAttribute('class').' '.$class); }
    else {
      $node->setAttribute(class=>$class); }}}

DefConstructor('\@ADDCLASS{}',sub {
  addClass($_[0]->getElement,ToString($_[1])); });

sub setAlignOrClass {
  my($document,$node,$align,$class)=@_;
  my $model = $document->getModel;
  if($model->canHaveAttribute($model->getNodeQName($node),'align')){
    $node->setAttribute(align=>$align); }
  else {
    addClass($node,$class); }}

