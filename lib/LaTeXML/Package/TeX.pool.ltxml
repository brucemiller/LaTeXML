# upper & lower case, actually expand (?)
# \uppercase<general text>, \lowercase<general text>
# and we REALLY should be using lccode & uccode
DefMacro('\uppercase',sub {
  my($gullet)=@_;
  my $t= $gullet->readXToken(0);
  my @tokens = ();
  if(Equals($t,T_BEGIN)){
    my $level=1;
    while($level && ($t=$gullet->readXToken(0))){
      if(Equals($t,T_BEGIN)){ $level++; }
      elsif(Equals($t,T_END)){ $level--; }
      push(@tokens,$t) if $level; }}
  else {
    push(@tokens,$t); }
  map( ($_->getCatcode == CC_LETTER ? T_LETTER(uc($_->getString)):$_), @tokens); });

