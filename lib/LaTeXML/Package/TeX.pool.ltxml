  my $internalcs = $glyph && T_CS('\@mathchardef@'.$csname);
  DefConstructorI($internalcs,undef,"<ltx:XMTok role='#role'>#glyph</ltx:XMTok>",
		  properties=>{role=>$role,glyph=>$glyph,
			       font=>sub{ LookupValue('font')->specialize($glyph); }},
