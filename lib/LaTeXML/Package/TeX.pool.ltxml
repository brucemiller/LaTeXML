# a candidate for use by \hskip, \hspace, etc... ?
sub DimensionToSpaces {
  my($dimen)=@_;
  my $pt = $dimen->ptValue;
  if($pt < 1.5){ return; }
  elsif($pt < 2.5){ Box("\x{2006}"); }
  elsif($pt < 3.5){ Box("\x{2005}"); }
  elsif($pt < 5.0){ Box("\x{2004}"); }
  else {
    my $n = int( ($pt+9)/10);
    Box( (UTF(0xA0) x $n) ); }};

