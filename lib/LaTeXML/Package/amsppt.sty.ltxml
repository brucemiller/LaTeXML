Tag('ltx:note',afterClose=>\&relocateFootnote);
sub relocateFootnote {
  my($document,$node)=@_;
  if(($node->getAttribute('role')||'') eq 'footnotetext'){
    if(my $mark = $node->getAttribute('mark')){
      if(my $note = $document->findnode(".//ltx:note[\@role='footnotemark'][\@mark='$mark']")){
	$node->parentNode->removeChild($node); 
	append_nodes($note,$node->childNodes);
	$note->setAttribute(role=>'footnote'); }}}}

