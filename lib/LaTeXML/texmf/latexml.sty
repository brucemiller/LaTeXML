  \@ifnextchar[{\lx@defmath@a{#1}}{\lx@defmath@a{#1}[0]}}
\def\lx@defmath@a#1[#2]{%
  \@ifnextchar[{\lx@defmath@opt{#1}[#2]}{\lx@defmath@noopt{#1}[#2]}}
\def\lx@defmath@opt#1[#2][#3]#4{%
